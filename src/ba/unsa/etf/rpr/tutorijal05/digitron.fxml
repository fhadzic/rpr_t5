<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="25" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
        <RowConstraints percentHeight="16.66" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <TextField fx:id="inputField" maxWidth="Infinity" GridPane.columnSpan="4" GridPane.rowIndex="0"/>
        <!-- Row 1 -->
        <Button fx:id="buttonPercent" onAction="#buttonPercentClick" text="\%" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button fx:id="buttonDivide" onAction="#buttonDivideClick" text="/" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="buttonMultiple" onAction="#buttonMultipleClick" text="x" maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Button fx:id="buttonDecrease" onAction="#buttonDecreaseClick" text="-" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <!-- Row 2 -->
        <Button fx:id="button7" onAction="#button7Click" text="7" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button fx:id="button8" onAction="#button8Click" text="8" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="button9" onAction="#button9Click" text="9" maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <Button fx:id="buttonIncrease" onAction="#buttonIncreaseClick" text="+" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="3" GridPane.rowSpan="2"
                GridPane.rowIndex="2"/>
        <!-- Row 3 -->
        <Button fx:id="button4" onAction="#button4Click" text="4" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Button fx:id="button5" onAction="#button5Click" text="5" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="button6" onAction="#button6Click" text="6" maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Button fx:id="buttonResult" onAction="#buttonResultClick" text="=" maxWidth="Infinity" maxHeight="Infinity" GridPane.columnIndex="3" GridPane.rowSpan="2"
                GridPane.rowIndex="4"/>
        <!-- Row 4 -->
        <Button fx:id="button1" onAction="#button1Click" text="1" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Button fx:id="button2" onAction="#button2Click" text="2" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Button fx:id="button3" onAction="#button3Click"text="3" maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <!-- Row 5 -->
        <Button fx:id="button0" onAction="#button0Click" text="0" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.columnSpan="2"
                GridPane.rowIndex="5"/>
        <Button fx:id="buttonComma" onAction="#buttonCommaClick" text="." maxWidth="Infinity" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    </children>

</GridPane>

